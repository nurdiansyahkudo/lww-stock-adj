<odoo>
    <record id="view_stock_adj_tree" model="ir.ui.view">
        <field name="name">stock.adj.list</field>
        <field name="model">stock.adj</field>
        <field eval="10" name="priority"/>
        <field name="arch" type="xml">
            <list>
                <field name="product_id" column_invisible="context.get('single_product', False)"/>
                <field name="location_id" column_invisible="context.get('hide_location', False)"/>
                <field name="lot_id" groups="stock.group_production_lot"
                       column_invisible="context.get('hide_lot', False)"/>
                <field name="lot_properties"/>
                <field name="package_id" groups="stock.group_tracking_lot"/>
                <field name="owner_id" groups="stock.group_tracking_owner"/>
                <field name="quantity" string="On Hand"/>
                <field name="available_quantity" string="Available"/>
                <field name="product_uom_id" groups="uom.group_uom" string="Unit"/>
                <field name="company_id" groups="base.group_multi_company" optional="hidden"/>
            </list>
        </field>
    </record>

    <record model="ir.actions.server" id="action_stock_adjustment_list">
        <field name="name">Stock Adjustment</field>
        <field name="model_id" ref="model_stock_adj"/>
        <field name="path">adjustment-stock</field>
        <field name="state">code</field>
        <field name="groups_id" eval="[(4, ref('stock.group_stock_user'))]"/>
        <field name="code">
            action = model.action_view_adjustments()
        </field>
    </record>

    <menuitem 
        id="menu_action_stock_adjustment_list"
        name="Stock Adjustment"
        parent="stock.menu_stock_warehouse_mgmt" 
        action="action_stock_adjustment_list"
        sequence="5"/>

</odoo>
