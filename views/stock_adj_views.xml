<odoo>
    <record id="view_stock_adj_tree" model="ir.ui.view">
        <field name="name">stock.adj.tree</field>
        <field name="model">stock.adj</field>
        <field name="arch" type="xml">
            <tree>
                <field name="quant_id"/>
                <!-- <field name="product_id"/>
                <field name="location_id"/>
                <field name="quantity"/> -->
            </tree>
        </field>
    </record>

    <record id="view_stock_adj_form" model="ir.ui.view">
        <field name="name">stock.adj.form</field>
        <field name="model">stock.adj</field>
        <field name="arch" type="xml">
            <form>
                <field name="quant_id"/>
            </form>
        </field>
    </record>

    <record id="action_stock_adjustment_custom" model="ir.actions.act_window">
        <field name="name">Stock Adjustment</field>
        <field name="res_model">stock.adj</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
